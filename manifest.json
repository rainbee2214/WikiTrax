{
  "manifest_version": 2,

  "name": "WikiTrax",
  "description": "Track your wikipedia page flow",
  "version": "0.1.0",

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "html/popup.html"
  },

  "permissions": [
    "webNavigation",
    "tabs",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      // Change 'matches' attribute to load content
      // script only in pages you want to.
      "matches": ["https://en.wikipedia.org/wiki/*"],
      "css": ["css/basic.css"],
      "js": ["js/popup.js"]
    }
  ]
}
