{
  "manifest_version": 2,

  "name": "WikiTrax",
  "description": "Track your wikipedia page flow",
  "version": "0.1.0",

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "assets/CherryTree.png",
    "default_popup": "html/popup.html"
  },

  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "<all_urls>"
  ]
}
